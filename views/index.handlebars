<main class="container">
    
    <h1>Good Burger</h1>
    <div class=" row">
      <section class="col-sm-12">
            <img src="../public/assets/images/good burger.jpg" alt="Good Burger" style="width:25%;height:auto;">
        </section>
        <section class="col-sm-5">
            <h3>Burgers</h3>
            <ul>
                {{#each burgers}}
                {{#unless devoured}}
                {{> burgers/burger-block devoured=true}}
                {{/unless}}
                {{/each}}
            </ul>
        </section>
        <section class="col-sm-2"></section>
        <section class="col-sm-5">
            <h3>Burgers Eaten</h3>
            <ul>
                {{#each burgers}}
                {{#if devoured}}
                {{> burgers/burger-block devoured=false}}
                {{/if}}
                {{/each}}
            </ul>
        </section>
    </div>
    <h3>Add Another Good Burger Here</h3>
    <form class="create-form">
        <div class="form-group">
            <label for="ca">Burger Name:</label>
            <input type="text" id="ca" name="name">
        </div>
        <button type='submit'>Submit</button>
    </form>
</main>
